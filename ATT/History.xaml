<Window x:Class="ATT.History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATT"
        mc:Ignorable="d"
        Title="История продаж" Height="450" Width="448.8">
    <Grid>
        <TextBox HorizontalAlignment="Right" Margin="0,10,170,0" Height="22" VerticalAlignment="Top" Width="200"/>
        <ComboBox HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="150">
            <ComboBoxItem IsSelected="True">
                <TextBlock Text="По кассиру"/>
            </ComboBoxItem>
            <TextBlock Text="По дате"/>
        </ComboBox>
        <DataGrid x:Name="history" HorizontalAlignment="Left" Height="370" Margin="10,40,0,0" VerticalAlignment="Top" Width="422">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding Path=Id}" Width="70" />
                <DataGridTextColumn Header="Кассир" Binding="{Binding Path=Person}" Width="150" />
                <DataGridTextColumn Header="Дата" Binding="{Binding Path=Date}" Width="100" />
                <DataGridTextColumn Header="Сумма" Binding="{Binding Path=Count}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
