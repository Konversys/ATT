<Window x:Class="ATT.Invoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATT"
        mc:Ignorable="d"
        Title="Накладные" Height="350" Width="350">
    <Grid>
        <ComboBox HorizontalAlignment="Right" Margin="0,10,9.6,0" VerticalAlignment="Top" Width="150">
            <ComboBoxItem IsSelected="True">
                <TextBlock Text="Все"/>
            </ComboBoxItem>
            <TextBlock Text="Ожидающие"/>
            <TextBlock Text="Обработанные"/>
        </ComboBox>
        <DataGrid HorizontalAlignment="Left" Height="252" Margin="10,53,0,0" VerticalAlignment="Top" Width="324">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding Path=Title}" Width="80" />
                <DataGridTextColumn Header="Склад" Binding="{Binding Path=Form}" Width="100" />
                <DataGridTextColumn Header="Дата" Binding="{Binding Path=Type}" Width="80" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
