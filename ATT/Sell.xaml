<Window x:Class="ATT.Sell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATT"
        mc:Ignorable="d"
        Title="Продажа товара" Height="170" Width="500">
    <Grid>
        <TextBlock x:Name="title" HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="475"/>
        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" Margin="0,65,0,0" TextWrapping="Wrap" Text="Доступно: 530" VerticalAlignment="Top" Width="218" Height="25"/>
        <TextBox x:Name="selling" HorizontalAlignment="Left" Margin="140,95,0,0" Text="1" TextWrapping="Wrap" IsReadOnly="True" VerticalAlignment="Top" Width="90" Height="25" VerticalContentAlignment="Center"/>
        <Button Content="Продать" HorizontalAlignment="Right" Margin="0,95,140,0" VerticalAlignment="Top" Width="100" Height="25" Click="Button_Click"/>
    </Grid>
</Window>
